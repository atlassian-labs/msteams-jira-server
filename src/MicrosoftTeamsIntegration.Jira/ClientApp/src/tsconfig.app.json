{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": [],
    "paths": {
      "~/*": [
        "/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@styles/*": [
        "styles/*"
      ]
    }
  },
  "exclude": [
    "**/*.spec.ts"
  ]
}